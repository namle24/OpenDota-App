<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/khunghome_1"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:background="?attr/colorOnSecondary"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="45dp"
            android:text="OPENDOTA"
            android:gravity="left"
            android:textColor="?attr/textFillColor"
            android:textSize="35sp">
        </TextView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="50dp"
            android:src="@drawable/dota_2">

        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90sp"
            android:text="Open source Dota 2 data platform"
            android:textAlignment="center"
            android:textColor="?attr/textFillColor"
            android:textSize="22sp">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="120dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Login"
                android:background="@drawable/steam_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" >
            </ImageView>

            <Button
                android:id="@+id/btnSteamLogin"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:contentDescription="Login"
                android:background="@drawable/steam_icon"
                android:text="Login with Steam"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:id="@+id/khunghome_2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="288dp"
            android:background="?attr/colorOnSecondary"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/open_source"
                android:layout_width="65dp"
                android:layout_height="67dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/open_source_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="Open Source"
                android:textColor="#03A9F4"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:text="All project code is open source and available for contributors to improve and modify."
                android:textColor="?attr/textFillColor"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            android:layout_below="@+id/khunghome_1"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:background="?attr/colorOnSecondary"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="75dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/stats_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="In-Depth Data"
                android:textColor="#03A9F4"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Parsing replay files provides highly detailed match data."
                android:textAlignment="center"
                android:textColor="?attr/textFillColor"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="?attr/colorOnSecondary">

        <ImageView
            android:id="@+id/magic"
            android:layout_width="97dp"
            android:layout_height="67dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:src="@drawable/magic_icon" />

        <TextView
            android:id="@+id/text9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="top"
            android:text="Free of Charge"
            android:textColor="#03A9F4"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text9"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="Server are funded by sponsors and volunteers maintain the code, so the service is offered free of charge."
            android:textColor="?attr/textFillColor"
            android:textSize="18sp" />

    </RelativeLayout>


</LinearLayout>