<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="?attr/backgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".searchplayerfragment.MatchesHistoryFragment"
        android:padding="15dp">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?attr/colorOnSecondary">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/A_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/avatar_1"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                tools:ignore="MissingClass" />
            <TextView
                android:id="@+id/A_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Minh"
                android:textStyle="bold"
                android:textColor="?attr/textFillColor"
                android:textAlignment="center"
                android:textSize="25sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="9"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/tv_win"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="@color/wins_winrate"
                    android:text="WINS\n211"
                    android:textSize="@dimen/wins_loses_winrate"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/losses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="LOSSES\n207"
                    android:textColor="@color/lose_winrate"
                    android:textSize="@dimen/wins_loses_winrate"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/winrate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="WINRATE\n50.48%"
                    android:textColor="@color/wins_winrate"
                    android:textSize="@dimen/wins_loses_winrate"
                    android:textAlignment="center"/>
            </LinearLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:src="@drawable/rank_icon_8"
                />
            <ProgressBar
                android:id="@+id/progressBar"
                android:paddingTop="18dp"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:max="100"
                android:progress="50"
                android:secondaryProgress="100"
                android:progressTint="@color/winProgress"
                android:secondaryProgressTint="@color/looseProgress"
                style="@android:style/Widget.ProgressBar.Horizontal"/>
            <TextView
                android:id="@+id/profile_steam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/link_steamid"
                android:textColorLink="?attr/textFillColor"
                android:padding="15dp"
                android:textSize="15sp"
                android:textColor="?attr/textFillColor"
                android:autoLink="web"
                android:linksClickable="true"/>
        </LinearLayout>

        <include layout="@layout/recycleview_match"/>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>