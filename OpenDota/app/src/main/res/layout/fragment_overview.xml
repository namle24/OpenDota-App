<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".searchplayerfragment.MatchesHistoryFragment"
        android:background="@color/background"
        android:padding="15dp">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".searchplayerfragment.MatchesHistoryFragment"
            android:background="@color/item">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/A_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/outline_account_circle_24"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/A_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="jojo"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="25sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="9"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/tv_win"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="@color/wins_loses_winrate"
                    android:text="WINS\n45"
                    android:textSize="@dimen/wins_loses_winrate"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/losses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="LOSSES\n50"
                    android:textColor="@color/wins_loses_winrate"
                    android:textSize="@dimen/wins_loses_winrate"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/winrate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="WINRATE\n47%"
                    android:textColor="@color/wins_loses_winrate"
                    android:textSize="@dimen/wins_loses_winrate"
                    android:textAlignment="center"/>
            </LinearLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:src="@drawable/dota_2_rank_guardian_5"
                />
            <ProgressBar
                android:id="@+id/progressBar"
                android:paddingTop="18dp"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:max="100"
                android:progress="47"
                android:secondaryProgress="100"
                android:progressTint="@color/winProgress"
                android:secondaryProgressTint="@color/looseProgress"
                style="@android:style/Widget.ProgressBar.Horizontal"/>
            <TextView
                android:id="@+id/profile_steam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="steam account goes here"
                android:padding="15dp"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:autoLink="web"
                android:linksClickable="true"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/item"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/recentmatches"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RECENT MATCHES"
                android:textSize="25dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"/>
            <LinearLayout
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_blue"
                android:orientation="vertical"
                android:layout_below="@+id/recentmatches">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/line"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="Hero"
                    android:textSize="@dimen/recentMaches_overview_textsize"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="Mode"
                    android:textSize="@dimen/recentMaches_overview_textsize"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="Ended"
                    android:textSize="@dimen/recentMaches_overview_textsize"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="Length"
                    android:textSize="@dimen/recentMaches_overview_textsize"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="K/D/A"
                    android:textSize="@dimen/recentMaches_overview_textsize"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

            </LinearLayout>


        </RelativeLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rm_recycleview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>