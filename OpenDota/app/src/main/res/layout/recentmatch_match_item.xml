<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_item_file"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    app:cardElevation="10dp"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DD262738"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/rm_hero"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:src="@drawable/antim"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />


        <TextView
            android:id="@+id/re_mode"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="All Draft Normal"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/rm_ended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 years"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_weight="0.2"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/rm_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="41:41"
            android:textColor="@color/white"
            android:layout_weight="0.2"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/rm_K_D_A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6/6/11"
            android:textColor="@color/white"
            android:layout_weight="0.2"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>


</androidx.cardview.widget.CardView>